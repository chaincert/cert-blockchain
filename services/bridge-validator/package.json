{
  "name": "@certblockchain/bridge-validator",
  "version": "1.0.0",
  "description": "Cross-chain bridge validator service for CERT Blockchain",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest"
  },
  "keywords": [
    "cert",
    "blockchain",
    "bridge",
    "validator",
    "cross-chain"
  ],
  "author": "CERT Blockchain Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.9.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": false
        }
      ]
    },
    "testTimeout": 10000
  }
}

